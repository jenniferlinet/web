<html>
    <body>
        <script>
            const calculatePerimeter=(...dimensions)=>{
                const[length,breadth]=dimensions;
                return 2*(length+breadth);
            };
            const alertPerimeter=()=>{
                const length=parseFloat(prompt('Enter the length of rectangle:'));
                const breadth=parseFloat(prompt('Enter the breadth of rectangle:'));
                const dimensions=[length,breadth];
                const perimeter=calculatePerimeter(...dimensions);
                alert("The perimeter of the rectangle is:"+perimeter);
            };
            alertPerimeter();
        </script>
    </body>
</html>
