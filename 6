<html>
    <head>
        <title>
            optional and deafult
        </title>
    </head>
    <body>
        <script>
            function greet(name,greeting="Hello"){
                if(name==undefined){
                    console.log(`${greeting},there!`);
                }else{
                    console.log(`${greeting},${name}!`);   
                }
            }
            greet("Alice");
            greet("Bob","good morning");
            greet();
        </script>
    </body>
</html>
